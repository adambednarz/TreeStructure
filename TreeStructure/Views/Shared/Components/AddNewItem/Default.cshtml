@model AddNewItemComponentModel

<form asp-controller="Directory" asp-action="Create" method="post" class="container">
    <div class="form-inline ">
        <input class="form-control" asp-for="Name" placeholder="Podaj nazwę" required/>
        <button type="submit" class="btn btn-sm btn-primary">Dodaj</button>
        <button type="button" class="btn btn-sm btn-secondary"  data-toggle="collapse" data-target="#ADD_@Model.ParentId" >Anuluj</button>
   
    </div>
    <div class="form-group  collapse ">
        <label> Dla rodzica </label>
        <input class="form-control" asp-for="ParentId" />
    </div>
</form>



